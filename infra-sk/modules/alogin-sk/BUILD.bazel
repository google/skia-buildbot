karma_test(
    name = "alogin-sk_test",
    src = "alogin-sk_test.ts",
    deps = [
        ":alogin-sk",
        "//:node_modules/@types/chai",
        "//:node_modules/chai",
        "//infra-sk/modules:test_util_ts_lib",
    ],
