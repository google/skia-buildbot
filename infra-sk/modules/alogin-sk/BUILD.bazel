    name = "alogin-sk",
    sass_deps = ["//infra-sk:themes_sass_lib"],
    sass_srcs = ["alogin-sk.scss"],
    ts_deps = [
        "//:node_modules/lit",
        "//elements-sk/modules:errormessage_ts_lib",
