karma_test(
    name = "sort-sk_test",
    src = "sort-sk_test.ts",
    deps = [
        ":sort-sk",
        "//:node_modules/@types/chai",
        "//:node_modules/chai",
        "//infra-sk/modules:dom_ts_lib",
    ],
)
