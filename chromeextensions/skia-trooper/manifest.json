{
   "name": "Alerts for Skia Troopers",
   "version": "2.1",
   "description": "Alerts for Skia Troopers.",
   "permissions": [
     "cookies",
     "*://alerts.skia.org/*"
   ],
   "background": {
     "scripts": ["background.js"]
   },
   "browser_action": {
     "name": "Display all active alerts.",
     "default_popup": "popup.html"
   },
   "icons": {
     "16": "pencil16.png",
     "48": "pencil48.png",
     "128": "pencil128.png"
   },
  "manifest_version": 2
}
