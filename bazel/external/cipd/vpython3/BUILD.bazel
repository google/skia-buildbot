load("@rules_go//go:def.bzl", "go_library")
load("//bazel/external:runfile_paths.bzl", "generate_go_runfile_path")

gen_filename, data = generate_go_runfile_path(
    name = "generate_go_runfile_path",
    go_library_name = "vpython3",
    path = "vpython3",
    platform_mapping = {
        "@platforms//os:linux": "@vpython3_linux-amd64//:all_files",
    },
)

# gazelle:ignore
go_library(
    name = "vpython3",
    srcs = [
        "vpython3.go",
        gen_filename,
    ],
    data = data,
    importpath = "go.skia.org/infra/bazel/external/cipd/vpython3",
    visibility = ["//visibility:public"],
    deps = [
        "//bazel/go/bazel",
        "@rules_go//go/runfiles",
    ],
)
