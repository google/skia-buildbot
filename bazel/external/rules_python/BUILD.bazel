go_library(
    name = "rules_python",
    srcs = [
        "rules_python.go",
        gen_filename,
    ],
    data = data,
    importpath = "go.skia.org/infra/bazel/external/rules_python",
    visibility = ["//visibility:public"],
    deps = ["//bazel/go/bazel"],
)
