load("@rules_go//go:def.bzl", "go_library")
load("//bazel/external:runfile_paths.bzl", "generate_go_runfile_path")

gen_filename, data = generate_go_runfile_path(
    name = "generate_go_runfile_path",
    go_library_name = "cockroachdb",
    path = "cockroach",
    platform_mapping = {
        "@platforms//os:linux": "@cockroachdb_linux//:all_files",
    },
)

# gazelle:ignore
go_library(
    name = "cockroachdb",
    srcs = [
        "cockroachdb.go",
        gen_filename,
    ],
    data = data,
    importpath = "go.skia.org/infra/bazel/external/cockroachdb",
    visibility = ["//visibility:public"],
    deps = ["//bazel/go/bazel"],
)
