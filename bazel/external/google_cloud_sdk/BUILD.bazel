load("@rules_go//go:def.bzl", "go_library")
load("//bazel/external:runfile_paths.bzl", "generate_go_runfile_path")

gen_filename, data = generate_go_runfile_path(
    name = "generate_go_runfile_path",
    go_library_name = "google_cloud_sdk",
    path = "google-cloud-sdk/bin/gcloud",
    platform_mapping = {
        "@platforms//os:linux": "@google_cloud_sdk//:all_files",
    },
)

# gazelle:ignore
go_library(
    name = "google_cloud_sdk",
    srcs = [
        "google_cloud_sdk.go",
        gen_filename,
    ],
    data = data,
    importpath = "go.skia.org/infra/bazel/external/google_cloud_sdk",
    visibility = ["//visibility:public"],
    deps = ["//bazel/go/bazel"],
)
