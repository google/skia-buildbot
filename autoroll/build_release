#!/bin/bash
# Builds and uploads a debian package for autoroll.
APPNAME=autorolld
DESCRIPTION="Controls Skia DEPS rolls into Chrome."
SYSTEMD=${APPNAME}.service

# Copy files into the right locations in ${ROOT}.
copy_release_files()
{
INSTALL="sudo install -D --verbose --backup=none --group=root --owner=root"
INSTALL_DIR="sudo install -d --verbose --backup=none --group=root --owner=root"
${INSTALL} --mode=644 -T ./sys/${APPNAME}.service ${ROOT}/etc/systemd/system/${APPNAME}.service
${INSTALL} --mode=755 -T ${GOPATH}/bin/autoroll   ${ROOT}/usr/local/bin/autoroll
${INSTALL} --mode=644 -T ./res/vul/elements.html  ${ROOT}/usr/local/share/skiaautoroll/res/vul/elements.html
${INSTALL} --mode=644 -T ./res/js/core.js         ${ROOT}/usr/local/share/skiaautoroll/res/js/core.js
${INSTALL} --mode=644 -T ./templates/header.html  ${ROOT}/usr/local/share/skiaautoroll/templates/header.html
${INSTALL} --mode=644 -T ./templates/main.html    ${ROOT}/usr/local/share/skiaautoroll/templates/main.html
${INSTALL_DIR} --mode=777                         ${ROOT}/mnt/pd0/autoroll_workdir
}

source ../bash/release.sh
