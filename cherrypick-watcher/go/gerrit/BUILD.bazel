    deps = [
        "@com_github_stretchr_testify//mock",
        "@com_github_stretchr_testify//require",
        "@org_skia_go_infra//go/gerrit:go_default_library",
        "@org_skia_go_infra//go/gerrit/mocks:go_default_library",
