load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("//bazel/go:go_test.bzl", "go_test")

go_library(
    name = "gerrit",
    srcs = ["gerrit.go"],
    importpath = "go.skia.org/infra/cherrypick-watcher/go/gerrit",
    visibility = ["//visibility:public"],
    deps = [
        "//go/skerr",
